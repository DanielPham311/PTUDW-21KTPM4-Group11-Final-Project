<main>
  <div class="container">

    <table class="table table-bordered">
      <h2 class="text-center">Thống kê báo cáo các quận</h2>
      <!-- Button trigger modal -->
      <button type="button" class="btn bg-opacity-0 float-right mb-2">
        <i class="bi bi-funnel"></i>
        Lọc
      </button>

      <thead class="custom-header">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Tên quận</th>
          <th scope="col">Số lượng báo cáo</th>
          <th scope="col">Đã xử lí</th>
          <th scope="col">Chi tiết</th>
        </tr>
      </thead>
      <tbody id="">
        {{#each district}}
          <tr>
            <td scope="row">{{district._id}}</td>
            <td>{{district.name}}</td>
            <td>100</td>
            <td>50/100</td>
            <!--Adjust flexibly here-->
            <td>
              <a href="/thongkequan">Chi tiết
                <i class="bi bi-info-circle"></i></a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</main>